<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.eventwise.home.groups.HomeGroupsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".home.groups.HomeGroupsFragment">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/no_size"
            android:layout_weight="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragmentHomeGroupsGroupRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/no_size"
            android:layout_weight="40"
            app:groupListBindingAdapter="@{viewModel.groupList}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>
</layout>
